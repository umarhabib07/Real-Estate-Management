<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_estate_property_offer_form" model="ir.ui.view">
            <field name="name">estate.property.offer.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>



                    <sheet>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_estate_property_offer_tree" model="ir.ui.view">
            <field name="name">estate.property.offer.tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button name="action_accept_offer" string="Accept" type="object" icon="fa-cogs" class="btn-success"/>
                <button name="action_refuse_offer" string="Refuse" type="object" class="btn-secondary"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

</odoo>